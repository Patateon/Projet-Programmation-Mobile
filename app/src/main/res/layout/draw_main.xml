<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DrawActivity">

    <!-- Bouton pour afficher les options -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_button"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DrawingView -->
    <com.main.projet_programmation_mobile.activity.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/buttonToggleOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageButton
        android:id="@+id/buttonToggleOptions"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/blue_button"
        android:scaleType="fitCenter"
        android:src="@drawable/penbutton"
        android:contentDescription="@string/drawoptions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawingView" />


    <!-- Options Layout -->
    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/buttonToggleOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/buttonColor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/colorimage"
            android:contentDescription="@string/colorpicker"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonClear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/cleanimage"
            android:contentDescription="@string/cleanbutton"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonToggleMode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/eraserimage"
            android:contentDescription="@string/rubberbutton"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter" />


        <com.google.android.material.slider.Slider
            android:id="@+id/sliderThickness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="30"
            android:stepSize="1"
            android:value="5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
